<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.WaitingFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnWait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/solicitar_ayuda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_wait"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/btnWait"
        app:layout_constraintStart_toStartOf="@+id/btnWait"
        app:layout_constraintTop_toBottomOf="@+id/btnWait" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="199dp"
        android:layout_height="55dp"
        android:layout_marginBottom="24dp"
        android:text="@string/para_contactar_con_uno_de_nuestros_empleados_haz_click_en_solicitar_ayuda"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnWait"
        app:layout_constraintEnd_toEndOf="@+id/btnWait"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="@+id/btnWait" />

</androidx.constraintlayout.widget.ConstraintLayout>